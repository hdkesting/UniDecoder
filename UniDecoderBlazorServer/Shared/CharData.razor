@using UniDecoderBlazorServer.Models
<div class="character">
    <!-- class = "sample" or "latin sample" -->
    <div class="@(Character.Name.Contains("Latin", StringComparison.OrdinalIgnoreCase) ? "latin" : "") sample"
        >@Character.Character</div>
        <!-- (click)="cp(character.codepoint, character.name)" -->
    <div>
    <p><b>@Character.Name</b></p>
    <p><a href="/block/@Character.Block">@Character.Block</a></p>
    <p><a href="/cat/@Character.CategoryName"><i>@Character.CategoryName</i></a></p>
    <p><a href="/name/@("0x" + Character.CodepointHex)">@Character.CodepointHex</a> &ndash;
        <a href="/name/@Character.Codepoint">@Character.Codepoint</a></p>
    </div>
</div>

@code {
    [Parameter]
    public CodepointInfo Character { get; set; } = null!;
}
