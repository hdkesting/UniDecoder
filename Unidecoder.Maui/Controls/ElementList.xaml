<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ctrl="clr-namespace:Unidecoder.Maui.Controls"
             xmlns:mdl="clr-namespace:Unidecoder.Maui.Models"
             x:Class="Unidecoder.Maui.Controls.ElementList"
             x:DataType="ctrl:ElementList"
             BackgroundColor="BurlyWood">
    <FlexLayout AlignContent="SpaceBetween" BindableLayout.ItemsSource="{Binding Elements}" Wrap="Wrap">
        <BindableLayout.ItemTemplate>
            <DataTemplate x:DataType="mdl:StringElement">
                <Label Text="{Binding Element}" />
            </DataTemplate>
        </BindableLayout.ItemTemplate>
    </FlexLayout>
</ContentView>
