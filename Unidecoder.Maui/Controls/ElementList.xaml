<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ctrl="clr-namespace:Unidecoder.Maui.Controls"
             xmlns:mdl="clr-namespace:Unidecoder.Maui.Models"
             x:Class="Unidecoder.Maui.Controls.ElementList"
             x:DataType="ctrl:ElementList"
             BackgroundColor="BurlyWood"
             x:Name="me">
    <VerticalStackLayout>
        <FlexLayout AlignContent="SpaceBetween" BindableLayout.ItemsSource="{Binding VM.Codepoints, Source={x:Reference me}, Mode=OneWay}" Wrap="Wrap">
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="mdl:CodepointAndPosition">
                    <Label Text="{Binding Codepoint.Character}" />
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </FlexLayout>
        <Label Text="{Binding VM.ElementCount, Mode=OneWay, Source={x:Reference me}}" BackgroundColor="LightPink" />
    </VerticalStackLayout>
</ContentView>
