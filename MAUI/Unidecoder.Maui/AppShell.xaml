<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Unidecoder.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Unidecoder.Maui"
    xmlns:page="clr-namespace:Unidecoder.Maui.Views"
    >

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Introduction" ContentTemplate="{DataTemplate page:Introduction}"/>
        <ShellContent Title="Text" ContentTemplate="{DataTemplate page:DisectText}" />
        <ShellContent Title="by Name" ContentTemplate="{DataTemplate page:ShowByName}" />
        <ShellContent Title="by Block" ContentTemplate="{DataTemplate page:ShowByBlock}" />
        <ShellContent Title="by Category" ContentTemplate="{DataTemplate page:ShowByCategory}" />
    </FlyoutItem>

</Shell>
